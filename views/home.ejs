<html>
<head>
  <meta charset="utf-8">
  
  <title>Employee Details</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper" style="background-color:lightblue;">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-olive elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="dist/img/employee.jpg"
				   alt="Employee Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Employee Details</span>
			</a>
			<!-- Sidebar -->
			<nav class="mt-2">
				<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
					<li class="nav-item">
					<a href="/createEmployee" class="nav-link">
					<i class="nav-icon far fa-circle text-info"></i>
						<p>Add Employee</p>
					</a>
					</li>
					<li class="nav-item">
					<a href="/" class="nav-link">
					<i class="nav-icon far fa-circle text-info"></i>
						<p class="text">Employee Details</p>
					</a>
					</li>
					<li class="nav-item">
					<a href="/updateEmployeeDetails" class="nav-link">
					<i class="nav-icon far fa-circle text-info"></i>
						<p class="text">Update Employee Details</p>
					</a>
					</li>
					</li>
					<li class="nav-item">
					<a href="/deleteEmployeeDetails" class="nav-link">
					<i class="nav-icon far fa-circle text-info"></i>
						<p class="text">Detele Employee Details</p>
					</a>
					</li>
	  
				</ul>
			</nav>
			<!-- /.sidebar -->
		</aside>
		
		<div class='content-wrapper'>
					<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper card-body table-responsive p-0" style="width: 75%">
			
			<section class="content-header">
				<center>
				<h2>Employee Details</h2>
				<table class="table table-striped table-head-fixed text-nowrap">
					<tr>
						<th style="width: 2%;background-color:#4CAF50;">EmpId</th>
						<th style="width: 2%;background-color:#4CAF50;">Company</th>
						<th style="width: 2%;background-color:#4CAF50;">Job</th>
						<th style="width: 2%;background-color:#4CAF50;">Degree</th>
						<th style="width: 2%;background-color:#4CAF50;">salary_more_then_100k</th>
						<th style="width: 2%;background-color:#4CAF50;"></th>
					</tr>
					<% for(var i=0;i<data.length ; i++){%>
					<tr>
						<td><%= data[i].empId %></td>	
						<td><%= data[i].company %></td>	
						<td><%= data[i].job %></td>	
						<td><%= data[i].degree %></td>	
						<td><%= data[i].salary_more_then_100k %></td>
						<td class="project-actions text-right">
							<a class="btn btn-info btn-sm" href="/updateEmployeeDetails"><i class="fas fa-pencil-alt"></i>Edit</a>
							<a class="btn btn-danger btn-sm" href="/deleteEmployeeDetails" ><i class="fas fa-trash"></i>Delete</a>
						</td>
					</tr>
					<%}%>
				</table>
			</section>
			
		</div>
		</div>
		
	</div>
	
</body>
</html>